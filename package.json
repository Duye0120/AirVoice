{
  "name": "air-voice",
  "version": "0.0.1",
  "description": "使用手机语音输入到电脑",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev:mobile": "vite --config mobile/vite.config.ts",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:electron": "tsc -p tsconfig.node.json && cross-env NODE_ENV=development electron .",
    "dev": "concurrently -k \"npm run dev:mobile\" \"npm run dev:electron\"",
    "build:mobile": "vite build --config mobile/vite.config.ts",
    "build:renderer": "vite build --config vite.config.ts",
    "build:electron": "tsc -p tsconfig.node.json",
    "start": "npm run build:mobile && npm run build:renderer && npm run build:electron && electron .",
    "pack": "npm run build:mobile && npm run build:renderer && npm run build:electron && electron-builder --dir",
    "dist": "npm run build:mobile && npm run build:renderer && npm run build:electron && electron-builder"
  },
  "dependencies": {
    "antd-mobile": "^5.42.3",
    "express": "^4.18.2",
    "koffi": "^2.8.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "http-proxy-middleware": "^3.0.5",
    "postcss": "^8.5.6",
    "sass": "^1.97.2",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.airvoice.app",
    "productName": "AirVoice",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*"
    ],
    "asarUnpack": [
      "node_modules/koffi/**/*"
    ]
  }
}
