{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist/electron",
    "rootDir": "electron",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "declaration": true
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules"]
}
